<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:animateLayoutChanges="true"
    tools:context="com.hornj.tictactoe.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/newGameButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:onClick="newGame" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/board"
        android:columnCount="4"
        android:rowCount="3"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/newGameButton"
        android:layout_marginTop="100dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/target0"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="displayIcon"
            android:layout_margin="10dp"
            android:layout_marginRight="40dp"
            android:tag="1" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/target1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginRight="15dp"
            android:layout_margin="10dp"
            android:onClick="displayIcon"
            android:tag="2" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/target3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginRight="40dp"
            android:onClick="displayIcon"
            android:tag="4" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/target4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginRight="15dp"
            android:layout_margin="10dp"
            android:onClick="displayIcon"
            android:tag="5" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/target5"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            android:onClick="displayIcon"
            android:tag="6" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/target6"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginRight="40dp"
            android:onClick="displayIcon"
            android:tag="7" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/target7"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginRight="15dp"
            android:layout_margin="10dp"
            android:onClick="displayIcon"
            android:tag="8" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/target8"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            android:onClick="displayIcon"
            android:tag="9" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/target2"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp"
            android:onClick="displayIcon"
            android:tag="3" />
    </GridLayout>

</RelativeLayout>
